{
  "name": "teamwork",
  "version": "1.0.0",
  "description": "An internal social network API for employees of an organization",
  "engines": {
    "node": "10.16.x"
  },
  "main": "./api/app.js",
  "scripts": {
    "start": "node ./api/app.js",
    "setup-db": "node ./api/db/setup.js",
    "start-dev": "nodemon app.js",
    "test:mocha": "mocha test/**/*.spec.js --exit",
    "test": "nyc --reporter=html --reporter=text mocha test/**/*.spec.js --exit",
    "lint": "eslint .",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chinfox/teamwork.git"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "author": "onyemachinedum@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Chinfox/teamwork/issues"
  },
  "homepage": "https://github.com/Chinfox/teamwork#readme",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "cloudinary": "^1.17.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "jsonwebtoken": "^9.0.0",
    "pg": "^7.12.1",
    "validator": "12.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
